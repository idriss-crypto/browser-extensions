{
  "extends": "@idriss-xyz/typescript-config/react-library.json",
  "compilerOptions": {
    "allowJs": true,
    "baseUrl": ".",
    "paths": {
      "final": ["src/final"],
      "infrastructure/*": ["src/infrastructure/*"],
      "application/*": ["src/application/*"],
      "host/*": ["src/host/*"],
      "shared/*": ["src/shared/*"],
      "assets/*": ["src/assets/*"]
    }
  },
  "include": ["src"],
  "exclude": ["node_modules"]
}
