{
  "manifest_version": 3,
  "name": "IDRISS",
  "version": "1.3.0",
  "description": "Crypto and AI expansion pack for your browser",
  "author": "IDriss",
  "background": {
    "service_worker": "service-worker.js"
  },
  "homepage_url": "https://www.idriss.xyz",
  "permissions": [
    "contextMenus",
    "tabs",
    "storage"
  ],
  "host_permissions": [
    "<all_urls>"
  ],
  "content_scripts": [
    {
      "matches": [
        "<all_urls>"
      ],
      "js": [
        "content-script.js"
      ],
      "all_frames": true
    }
  ],
  "icons": {
    "16": "img/icon16.png",
    "48": "img/icon48.png",
    "128": "img/icon128.png",
    "148": "img/icon148.png"
  },
  "action": {
    "default_icon": {
      "16": "img/icon16.png",
      "48": "img/icon48.png",
      "128": "img/icon128.png",
      "148": "img/icon148.png"
    }
  },
  "web_accessible_resources": [
    {
      "resources": [
        "webpage-script.js",
        "fonts/*"
      ],
      "matches": [
        "<all_urls>"
      ]
    }
  ]
}
