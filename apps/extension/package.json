{
  "name": "@idriss-xyz/extension",
  "scripts": {
    "preinstall": "npx only-allow pnpm",
    "build:tailwind": "postcss tailwind.css -o src/shared/ui/providers/tailwind.build.css",
    "dev": "pnpm build:tailwind && rspack --mode=development",
    "build": "pnpm build:tailwind && rspack --mode=production",
    "format": "prettier --check --config prettier.config.mjs --ignore-path .prettierignore .",
    "format:fix": "prettier --write --config prettier.config.mjs --ignore-path .prettierignore .",
    "lint": "eslint src --max-warnings=0",
    "lint:fix": "eslint src --max-warnings=0 --fix",
    "circular-deps": "depcruise --config .dependency-cruiser.cjs src",
    "unused-exports": "./node_modules/.bin/ts-unused-exports ./tsconfig.json --ignoreFiles=.stories",
    "architecture-graph": "depcruise src --include-only ^src --output-type archi | dot -T svg -Grankdir=TD > architecture/graph.svg",
    "architecture-graph:folders": "depcruise src --include-only ^src --output-type ddot | dot -T svg -Grankdir=TD > architecture/folders-graph.svg",
    "type-check": "tsc --noEmit",
    "storybook:dev": "storybook dev -p 6006",
    "storybook:build": "storybook build"
  },
  "dependencies": {
    "@amplitude/analytics-browser": "2.9.2",
    "@ebay/nice-modal-react": "^1.2.13",
    "@hookform/resolvers": "^3.9.0",
    "@noble/hashes": "^1.5.0",
    "@radix-ui/react-checkbox": "^1.1.2",
    "@radix-ui/react-dropdown-menu": "^2.1.2",
    "@radix-ui/react-icons": "^1.3.0",
    "@radix-ui/react-portal": "^1.1.2",
    "@radix-ui/react-scroll-area": "^1.2.0",
    "@radix-ui/react-switch": "^1.1.1",
    "@radix-ui/react-tabs": "^1.1.1",
    "@sentry/browser": "^8.34.0",
    "@tanstack/react-query": "^5.59.15",
    "clsx": "^2.1.1",
    "idriss-crypto": "^1.9.1",
    "lodash": "^4.17.21",
    "mipd": "^0.0.7",
    "process": "^0.11.10",
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "react-error-boundary": "^4.1.2",
    "react-hook-form": "^7.53.1",
    "react-number-format": "^5.4.2",
    "react-router": "^6.27.0",
    "react-use": "^17.5.1",
    "tailwind-merge": "^2.5.4",
    "ts-custom-error": "^3.3.1",
    "ts-pattern": "^5.5.0",
    "uuid": "^10.0.0",
    "viem": "^2.21.32",
    "web3": "^4.3.0",
    "zod": "^3.23.8"
  },
  "devDependencies": {
    "@chromatic-com/storybook": "^2.0.2",
    "@idriss-xyz/tailwind-config": "workspace:*",
    "@idriss-xyz/typescript-config": "workspace:*",
    "@rspack/cli": "^1.0.14",
    "@rspack/core": "^1.0.14",
    "@sentry/webpack-plugin": "^2.22.6",
    "@storybook/addon-essentials": "^8.3.6",
    "@storybook/addon-links": "^8.3.6",
    "@storybook/addon-webpack5-compiler-babel": "^3.0.3",
    "@storybook/blocks": "^8.3.6",
    "@storybook/react": "^8.3.6",
    "@storybook/react-webpack5": "^8.3.6",
    "@storybook/test": "^8.3.6",
    "@swc/helpers": "^0.5.13",
    "@total-typescript/ts-reset": "^0.6.1",
    "@types/chrome": "^0.0.278",
    "@types/crypto-js": "^4.2.2",
    "@types/lodash": "^4.17.12",
    "@types/react": "^18.3.11",
    "@types/react-dom": "^18.3.1",
    "@types/uuid": "^10.0.0",
    "css-loader": "^6.10.0",
    "dependency-cruiser": "^16.4.2",
    "dotenv-safe": "^9.1.0",
    "eslint": "^8.57.0",
    "node-polyfill-webpack-plugin": "^4.0.0",
    "postcss-cli": "^11.0.0",
    "prettier": "^3.3.3",
    "prettier-plugin-tailwindcss": "^0.6.8",
    "sass": "^1.43.2",
    "sass-loader": "^13.0.2",
    "storybook": "^8.3.6",
    "ts-unused-exports": "^10.1.0",
    "typescript": "^5.6.3"
  },
  "packageManager": "pnpm@9.1.0",
  "engines": {
    "node": ">=20.13.0",
    "pnpm": ">=9.1.0"
  }
}
