{
  "manifest_version": 3,
  "name": "IDriss",
  "version": "1.1.35",
  "description": "A more usable web3 for everyone.",
  "author": "IDriss",
  "background": {
    "service_worker": "service-worker.js"
  },
  "homepage_url": "https://www.idriss.xyz",
  "permissions": [
    "contextMenus",
    "tabs",
    "storage"
  ],
  "host_permissions": [
    "<all_urls>"
  ],
  "content_scripts": [
    {
      "matches": [
        "<all_urls>"
      ],
      "js": [
        "polyfills.js",
        "content-script.js"
      ],
      "all_frames": true
    }
  ],
  "icons": {
    "16": "img/icon16.png",
    "48": "img/icon48.png",
    "128": "img/icon128.png",
    "148": "img/icon148.png"
  },
  "action": {
    "default_popup": "standalone.html",
    "default_icon": "img/icon16bw.png"
  },
  "web_accessible_resources": [
    {
      "resources": [
        "webpage-script.js"
      ],
      "matches": [
        "<all_urls>"
      ]
    }
  ]
}
