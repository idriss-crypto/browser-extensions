{
  "manifest_version": 3,
  "name": "IDriss",
  "version": "1.1.2",
  "description": "Use emails, phone numbers or Twitter usernames instead of crypto wallet addresses.",
  "author": "IDriss",
  "content_scripts": [
    {
      "matches": [
        "<all_urls>"
      ],
      "js": [
        "contentScript.js"
      ],
      "all_frames": true
    }
  ],
  "background": {
    "service_worker": "serviceWorker.js"
  },
  "homepage_url": "https://www.idriss.xyz",
  "permissions": [
    "contextMenus",
    "tabs",
    "storage"
  ],
  "icons": {
    "16": "img/icon16.png",
    "48": "img/icon48.png",
    "128": "img/icon128.png",
    "148": "img/icon148.png"
  },
  "action": {
    "default_popup": "standalone.html",
    "default_icon": "img/icon16bw.png"
  }
}