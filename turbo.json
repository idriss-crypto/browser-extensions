{
  "$schema": "https://turbo.build/schema.json",
  "tasks": {
    "@idriss-xyz/main-landing#build": {
      "inputs": [
        "$TURBO_DEFAULT$",
        ".env*"
      ],
      "outputs": [
        ".next/**",
        "!.next/cache/**"
      ],
      "env": [
        "BASIC_AUTH_USER",
        "BASIC_AUTH_PASSWORD",
        "ENVIRONMENT",
        "RAILWAY_PUBLIC_DOMAIN"
      ]
    },
    "@idriss-xyz/main-landing#start": {
      "dependsOn": [
        "@idriss-xyz/main-landing#build"
      ],
      "env": [
        "BASIC_AUTH_USER",
        "BASIC_AUTH_PASSWORD",
        "ENVIRONMENT",
        "RAILWAY_PUBLIC_DOMAIN"
      ]
    },
    "@idriss-xyz/main-landing#dev": {
      "cache": false,
      "persistent": true,
      "env": [
        "BASIC_AUTH_USER",
        "BASIC_AUTH_PASSWORD",
        "ENVIRONMENT",
        "RAILWAY_PUBLIC_DOMAIN"
      ]
    },
    "@idriss-xyz/extension#dev": {
      "cache": false,
      "env": [
        "AMPLITUDE_API_KEY",
        "ENVIRONMENT",
        "SENTRY_DSN",
        "SENTRY_ENVIRONMENT"
      ],
      "inputs": [
        "$TURBO_DEFAULT$",
        ".env.development",
        ".env.production"
      ]
    },
    "@idriss-xyz/extension#build": {
      "cache": true,
      "env": [
        "AMPLITUDE_API_KEY",
        "ENVIRONMENT",
        "SENTRY_DSN",
        "SENTRY_ENVIRONMENT"
      ],
      "inputs": [
        "$TURBO_DEFAULT$",
        ".env.development",
        ".env.production"
      ],
      "outputs": [
        "build"
      ]
    },
    "@idriss-xyz/copilot-api#start": {
      "cache": false,
      "persistent": true,
      "env": [
        "CHALLENGE_SECRET",
        "JWT_SECRET",
        "DATABASE_HOST",
        "DATABASE_PORT",
        "DATABASE_USER",
        "DATABASE_PASS",
        "DATABASE_DB_NAME"
      ]
    },
    "@idriss-xyz/copilot-api#prod": {
      "cache": true,
      "persistent": true,
      "env": [
        "CHALLENGE_SECRET",
        "JWT_SECRET",
        "DATABASE_HOST",
        "DATABASE_PORT",
        "DATABASE_USER",
        "DATABASE_PASS",
        "DATABASE_DB_NAME"
      ]
    },
    "lint": {
      "inputs": [
        "$TURBO_DEFAULT$",
        "../../packages/eslint-config/.eslintrc.cjs"
      ]
    },
    "lint:fix": {
      "inputs": [
        "$TURBO_DEFAULT$",
        "../../packages/eslint-config/.eslintrc.cjs"
      ]
    },
    "format": {
      "inputs": [
        "$TURBO_DEFAULT$",
        "../../prettier.config.mjs"
      ]
    },
    "format:fix": {
      "inputs": [
        "$TURBO_DEFAULT$",
        "../../prettier.config.mjs"
      ]
    },
    "unused-exports": {},
    "circular-dependencies": {},
    "type-check": {}
  }
}
